@model IEnumerable<Hospital.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments for Patient";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";


}
<link href="~/css/TableStyleSheet.css" rel="stylesheet" />

<style>

</style>

@if (Model.Count() > 0)
{
    <div class="container mt-5">
        <h3 class="text-center mb-4">Your Upcoming Appointments</h3>
        <div class="card-body">
            <table class="table table-striped table-hover table-rounded">
                <thead class="custom-row">
                    <tr>
                        <th>Doctor</th>
                        <th>Specialization</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Details</th>
                        <th>Cancel Appointment</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var appointment in Model)
                    {
                    <tr>
                        <td>@appointment.Doctor?.FirstName @appointment.Doctor?.LastName</td>
                        <td>@appointment.Specialization</td>
                        <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                        <td>@appointment.Slot</td>

                        <td><a asp-action="Details" asp-route-id="@appointment.Id" class="text-info"><i class="fas fa-eye"></i></a></td>
                        <td><a asp-action="Delete" asp-route-id="@appointment.Id" class="text-danger"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
}


 else
{
    <div class="mt-5 alert alert-warning text-center" style="width:60%; margin:auto">
        <h3>No Scheduled Appointments</h3>
    </div>


@* <tr>
    <td colspan="6" class="text-center">No appointments</td>
</tr> *@
}